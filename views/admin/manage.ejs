<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manajemen Admin | CDC Universitas Andalas</title>
  
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --primary: #2F6B31;
      --secondary: #4CA858;
      --accent: #6BCF78;
      --bg: #f5f7fa;
      --card-bg: #fff;
      --text-dark: #1f2e24;
      --text-muted: #6d7a6f;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      color: var(--text-dark);
      display: flex;
    }

    /* Sidebar - Minimalis Putih */
    .sidebar {
      width: 260px;
      background: #ffffff;
      color: var(--text-dark);
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      z-index: 1000;
      box-shadow: 2px 0 8px rgba(0,0,0,0.05);
      border-right: 1px solid #e9ecef;
      transition: transform 0.3s ease;
    }

    .sidebar-header {
      padding: 25px 20px;
      border-bottom: 1px solid #e9ecef;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .sidebar-header img {
      width: 45px;
      height: 45px;
      object-fit: contain;
      filter: none;
    }

    .sidebar-header h2 {
      font-size: 16px;
      font-weight: 600;
      margin: 0;
      color: var(--text-dark);
    }

    .sidebar-menu {
      padding: 15px 0;
    }

    .menu-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 20px;
      color: var(--text-muted);
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.2s;
      border-left: 3px solid transparent;
    }

    .menu-item:hover {
      background: #f8f9fa;
      border-left-color: var(--primary);
      color: var(--primary);
    }

    .menu-item.active {
      background: #f0f7f1;
      border-left-color: var(--primary);
      color: var(--primary);
    }

    .menu-item svg {
      width: 18px;
      height: 18px;
      stroke: currentColor;
    }

    .menu-divider {
      height: 1px;
      background: #e9ecef;
      margin: 10px 20px;
    }

    .sidebar-footer {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 20px;
      border-top: 1px solid #e9ecef;
      background: #ffffff;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px;
      background: #f8f9fa;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .user-info .user-avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: var(--primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 14px;
    }

    .user-info .user-details {
      flex: 1;
    }

    .user-info .user-name {
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 2px;
      color: var(--text-dark);
    }

    .user-info .user-role {
      font-size: 11px;
      color: var(--text-muted);
    }

    .logout-btn {
      width: 100%;
      padding: 10px;
      background: #f8f9fa;
      border: 1px solid #e9ecef;
      border-radius: 6px;
      color: var(--text-dark);
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      text-decoration: none;
    }

    .logout-btn:hover {
      background: #e9ecef;
      color: var(--primary);
    }

    .start-tour-btn {
      width: 100%;
      background: linear-gradient(135deg, #4CA858 0%, #6BCF78 100%);
      color: white;
      border: none;
      padding: 14px 20px;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      font-family: 'Poppins', sans-serif;
      margin: 0 0 15px 0;
      box-shadow: 0 2px 8px rgba(76, 168, 88, 0.2);
      position: relative;
      overflow: hidden;
    }

    .start-tour-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }

    .start-tour-btn:hover::before {
      left: 100%;
    }

    .start-tour-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(76, 168, 88, 0.35);
      background: linear-gradient(135deg, #5CB85C 0%, #7DD87D 100%);
    }

    .start-tour-btn:active {
      transform: translateY(0);
    }

    .start-tour-btn svg {
      width: 18px;
      height: 18px;
    }

    .mobile-menu-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      color: var(--text-dark);
      padding: 8px;
    }

    /* Main Content Area */
    .main-wrapper {
      flex: 1;
      margin-left: 260px;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .container {
      max-width: 1400px;
      margin: 30px auto;
      padding: 0 50px;
      flex: 1;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
        position: fixed;
      }

      .sidebar.open {
        transform: translateX(0);
      }

      .main-wrapper {
        margin-left: 0;
      }

      .mobile-menu-toggle {
        display: block;
      }

      .container {
        padding: 0 20px;
      }
    }

    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .page-header h1 {
      margin: 0;
    }

    .page-header h1 {
      font-size: 28px;
      font-weight: 700;
      color: var(--text-dark);
    }

    .btn {
      padding: 12px 24px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      text-decoration: none;
      border: none;
      cursor: pointer;
      transition: all 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .btn-primary {
      background: var(--primary);
      color: white;
    }

    .btn-primary:hover {
      background: var(--secondary);
      transform: translateY(-2px);
    }

    .alert {
      padding: 15px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-size: 14px;
    }

    .alert-success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .alert-error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .table-card {
      background: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      padding: 25px;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: linear-gradient(135deg, #2F6B31, #4CA858);
      color: white;
    }

    th {
      padding: 15px;
      text-align: left;
      font-weight: 600;
      font-size: 14px;
    }

    td {
      padding: 15px;
      border-bottom: 1px solid #f1f3f4;
      font-size: 14px;
    }

    tbody tr:hover {
      background: #f8f9fa;
    }

    .badge {
      display: inline-block;
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }

    .badge-success {
      background: #d4edda;
      color: #155724;
    }

    .badge-danger {
      background: #f8d7da;
      color: #721c24;
    }

    .badge-primary {
      background: #cfe2ff;
      color: #084298;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 12px;
    }

    .btn-edit {
      background: #6366f1;
      color: white;
    }

    .btn-edit:hover {
      background: #4f46e5;
    }

    .btn-delete {
      background: #dc3545;
      color: white;
    }

    .btn-delete:hover {
      background: #c82333;
    }

    .permissions-list {
      display: flex;
      flex-wrap: wrap;
      gap: 5px;
    }

    .permission-tag {
      padding: 3px 8px;
      background: #e3f2fd;
      color: #1976d2;
      border-radius: 4px;
      font-size: 11px;
    }

    /* Tour Guide Styles */
    .tour-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      z-index: 9998;
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: none;
      display: none;
    }

    .tour-overlay.active {
      opacity: 1;
      pointer-events: all;
      display: block;
    }

    .tour-highlight {
      position: absolute;
      border: 3px solid var(--primary);
      border-radius: 8px;
      box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.7), 0 0 20px rgba(47, 107, 49, 0.5);
      z-index: 9999;
      transition: all 0.3s ease;
      pointer-events: none;
      display: none;
    }

    .tour-highlight.active {
      display: block;
    }

    .tour-tooltip {
      position: absolute;
      background: white;
      border-radius: 12px;
      padding: 20px;
      max-width: 350px;
      min-width: 300px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      z-index: 10000;
      animation: tooltipFadeIn 0.3s ease;
      font-family: 'Poppins', sans-serif;
      overflow: hidden;
      box-sizing: border-box;
    }

    @keyframes tooltipFadeIn {
      from {
        opacity: 0;
        transform: scale(0.9);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .tour-tooltip::before {
      content: '';
      position: absolute;
      width: 0;
      height: 0;
      border: 12px solid transparent;
    }

    .tour-tooltip.top::before {
      bottom: -24px;
      left: 50%;
      transform: translateX(-50%);
      border-top-color: white;
    }

    .tour-tooltip.bottom::before {
      top: -24px;
      left: 50%;
      transform: translateX(-50%);
      border-bottom-color: white;
    }

    .tour-tooltip.left::before {
      right: -24px;
      top: 50%;
      transform: translateY(-50%);
      border-left-color: white;
    }

    .tour-tooltip.right::before {
      left: -24px;
      top: 50%;
      transform: translateY(-50%);
      border-right-color: white;
    }

    .tour-tooltip-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 12px;
      padding-bottom: 12px;
      border-bottom: 2px solid #f0f0f0;
    }

    .tour-tooltip-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      padding: 12px;
    }

    .tour-tooltip-icon svg {
      width: 24px;
      height: 24px;
      stroke: white;
      stroke-width: 2;
      fill: none;
    }

    .tour-tooltip-title {
      font-size: 18px;
      font-weight: 700;
      color: var(--text-dark);
      margin: 0;
      flex: 1;
    }

    .tour-tooltip-content {
      font-size: 14px;
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 16px;
    }

    .tour-tooltip-footer {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
    }

    .tour-progress {
      font-size: 12px;
      color: var(--text-muted);
      font-weight: 600;
    }

    .tour-buttons {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      margin-left: auto;
    }

    .tour-btn {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      font-family: 'Poppins', sans-serif;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .tour-btn-primary {
      background: var(--primary);
      color: white;
    }

    .tour-btn-primary:hover {
      background: var(--secondary);
      transform: translateY(-1px);
    }

    .tour-btn-secondary {
      background: #f8f9fa;
      color: var(--text-dark);
      border: 1px solid #e9ecef;
    }

    .tour-btn-secondary:hover {
      background: #e9ecef;
    }

    .tour-btn-skip {
      background: transparent;
      color: var(--text-muted);
      border: none;
    }

    .tour-btn-skip:hover {
      color: var(--text-dark);
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <% 
    // Gunakan currentUser yang di-pass dari route, bukan user
    const currentUserData = typeof currentUser !== 'undefined' ? currentUser : (typeof user !== 'undefined' ? user : null);
    const userPermissions = currentUserData && currentUserData.permissions ? currentUserData.permissions : {};
    const isSuperAdmin = currentUserData && currentUserData.role === 'superadmin';
    const hasPermission = (perm) => isSuperAdmin || userPermissions[perm] === true;
    // currentPath akan di-set secara dinamis via JavaScript
  %>
  
  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <img src="/images/logounand.png" alt="Logo UNAND">
      <h2>Career Development Center Unand</h2>
    </div>
    <nav class="sidebar-menu">
      <!-- Dashboard selalu bisa diakses semua user yang sudah login -->
      <a href="/dashboard" class="menu-item">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="7" height="7"></rect>
          <rect x="14" y="3" width="7" height="7"></rect>
          <rect x="14" y="14" width="7" height="7"></rect>
          <rect x="3" y="14" width="7" height="7"></rect>
        </svg>
        Dashboard
      </a>
      
      <% if (hasPermission('riwayat')) { %>
        <a href="/riwayat" class="menu-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          Riwayat Capaian
        </a>
      <% } %>
      
      <% if (hasPermission('upload')) { %>
        <a href="/upload" class="menu-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="17 8 12 3 7 8"></polyline>
            <line x1="12" y1="3" x2="12" y2="15"></line>
          </svg>
          Upload Data CSV
        </a>
      <% } %>
      
      <% if (hasPermission('pembobotan')) { %>
        <a href="/pembobotan" class="menu-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          Pencatatan Pembobotan
        </a>
      <% } %>
      
      <% if (hasPermission('manage_admin') || hasPermission('profile')) { %>
        <div class="menu-divider"></div>
      <% } %>
      
      <% if (hasPermission('manage_admin')) { %>
        <a href="/admin" class="menu-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
          Manajemen Admin
        </a>
      <% } %>
      
      <!-- Profil Admin selalu bisa diakses semua user yang sudah login -->
      <a href="/profile" class="menu-item">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        Profil Admin
      </a>
      
    </nav>
    <div class="sidebar-footer">
      <!-- Tour Guide Button -->
      <button class="start-tour-btn" id="startTourBtn" onclick="startTour()">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <circle cx="12" cy="12" r="10"></circle>
          <path d="M12 16v-4M12 8h.01"></path>
        </svg>
        Mulai Panduan
      </button>
      <div class="user-info">
        <div class="user-avatar">
          <%= currentUserData && currentUserData.username ? currentUserData.username.charAt(0).toUpperCase() : 'A' %>
        </div>
        <div class="user-details">
          <div class="user-name"><%= currentUserData && currentUserData.username ? currentUserData.username : 'Admin' %></div>
          <div class="user-role"><%= currentUserData && currentUserData.role ? currentUserData.role : 'Admin' %></div>
        </div>
      </div>
      <a href="/logout" class="logout-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
          <polyline points="16 17 21 12 16 7"></polyline>
          <line x1="21" y1="12" x2="9" y2="12"></line>
        </svg>
        Logout
      </a>
    </div>
  </aside>

  <!-- Main Content Wrapper -->
  <div class="main-wrapper">
    <div class="container">
      <div class="page-header">
        <div style="display: flex; align-items: center; gap: 15px;">
          <button class="mobile-menu-toggle" onclick="toggleSidebar()">â˜°</button>
          <h1>Manajemen Admin</h1>
        </div>
        <a href="/admin/create" class="btn btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          Tambah Admin
        </a>
      </div>

    <% if (msg) { %>
      <div class="alert alert-success"><%= msg %></div>
    <% } %>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="table-card">
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Permissions</th>
            <th>Created At</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (admins && admins.length > 0) { %>
            <% admins.forEach(function(admin) { %>
              <tr>
                <td><strong><%= admin.username %></strong></td>
                <td><%= admin.email || '-' %></td>
                <td>
                  <span class="badge badge-primary"><%= admin.role %></span>
                </td>
                <td>
                  <span class="badge <%= admin.is_active ? 'badge-success' : 'badge-danger' %>">
                    <%= admin.is_active ? 'Aktif' : 'Nonaktif' %>
                  </span>
                </td>
                <td>
                  <% if (admin.permissions) { %>
                    <div class="permissions-list">
                      <% Object.keys(admin.permissions).forEach(function(key) { %>
                        <% if (admin.permissions[key]) { %>
                          <span class="permission-tag"><%= key %></span>
                        <% } %>
                      <% }) %>
                    </div>
                  <% } else { %>
                    <span style="color: var(--text-muted);">-</span>
                  <% } %>
                </td>
                <td><%= new Date(admin.createdAt).toLocaleDateString('id-ID') %></td>
                <td>
                  <a href="/admin/<%= admin.id %>/edit" class="btn btn-sm btn-edit">Edit</a>
                  <% if (admin.id !== currentUser.id) { %>
                    <button onclick="deleteAdmin(<%= admin.id %>)" class="btn btn-sm btn-delete">Hapus</button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" style="text-align: center; padding: 40px; color: var(--text-muted);">
                Belum ada admin
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Tour Guide Overlay -->
  <div class="tour-overlay" id="tourOverlay"></div>
  <div class="tour-highlight" id="tourHighlight"></div>
  <div class="tour-tooltip" id="tourTooltip" style="display: none;">
    <div class="tour-tooltip-header">
      <div class="tour-tooltip-icon" id="tourIcon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
      </div>
      <h3 class="tour-tooltip-title" id="tourTitle">Judul Panduan</h3>
    </div>
    <div class="tour-tooltip-content" id="tourContent">
      Deskripsi fungsi elemen ini akan ditampilkan di sini.
    </div>
    <div class="tour-tooltip-footer">
      <span class="tour-progress" id="tourProgress">1 / 10</span>
      <div class="tour-buttons">
        <button class="tour-btn tour-btn-skip" onclick="skipTour()">Lewati</button>
        <button class="tour-btn tour-btn-secondary" id="tourPrevBtn" onclick="prevTourStep()" style="display: none;">Sebelumnya</button>
        <button class="tour-btn tour-btn-primary" id="tourNextBtn" onclick="nextTourStep()">Selanjutnya</button>
      </div>
    </div>
  </div>

  <script>
    async function deleteAdmin(id) {
      if (!confirm('Apakah Anda yakin ingin menghapus admin ini?')) {
        return;
      }

      try {
        const response = await fetch(`/admin/${id}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const result = await response.json();

        if (result.success) {
          alert(result.message);
          location.reload();
        } else {
          alert('Error: ' + result.message);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat menghapus admin');
      }
    }
  </script>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('open');
    }

    // Update active menu item based on current page
    document.addEventListener('DOMContentLoaded', function() {
      const currentPath = window.location.pathname;
      const menuItems = document.querySelectorAll('.menu-item');
      
      menuItems.forEach(item => {
        const href = item.getAttribute('href');
        // Check if current path matches the href exactly, or if it's an admin page and href is /admin
        if (href === currentPath || (currentPath.startsWith('/admin') && href === '/admin')) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
    });

    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(event) {
      const sidebar = document.getElementById('sidebar');
      const toggleBtn = document.querySelector('.mobile-menu-toggle');
      
      if (window.innerWidth <= 768) {
        if (sidebar && toggleBtn && !sidebar.contains(event.target) && !toggleBtn.contains(event.target) && sidebar.classList.contains('open')) {
          sidebar.classList.remove('open');
        }
      }
    });

    // Tour Guide Script
    const tourIcons = {
      menu: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>',
      admin: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>',
      table: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>',
      add: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>',
      edit: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>',
      delete: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>'
    };

    function getAvailableTourSteps() {
      const allSteps = [
        {
          element: '#sidebar',
          title: 'Menu Navigasi',
          content: 'Ini adalah menu navigasi utama. Gunakan menu ini untuk berpindah antar halaman seperti Dashboard, Riwayat Capaian, Upload Data, dan lainnya.',
          iconKey: 'menu',
          position: 'right'
        },
        {
          element: '.page-header',
          title: 'Manajemen Admin',
          content: 'Halaman ini digunakan untuk mengelola akun admin dan pengguna sistem. Hanya superadmin yang dapat mengakses halaman ini.',
          iconKey: 'admin',
          position: 'bottom'
        },
        {
          element: '.btn-primary[href="/admin/create"]',
          title: 'Tambah Admin',
          content: 'Tombol ini digunakan untuk menambahkan admin baru ke dalam sistem. Klik untuk membuka form tambah admin.',
          iconKey: 'add',
          position: 'bottom'
        },
        {
          element: '.table-card',
          title: 'Daftar Admin',
          content: 'Tabel ini menampilkan daftar semua admin yang terdaftar dalam sistem beserta informasi username, email, role, dan status akun.',
          iconKey: 'table',
          position: 'top'
        },
        {
          element: 'a[href*="/admin/edit"]',
          title: 'Edit Admin',
          content: 'Tombol edit digunakan untuk mengubah informasi admin seperti username, email, role, dan permissions. Klik untuk membuka form edit.',
          iconKey: 'edit',
          position: 'top'
        },
        {
          element: 'button[onclick*="deleteAdmin"]',
          title: 'Hapus Admin',
          content: 'Tombol hapus digunakan untuk menghapus akun admin dari sistem. Hati-hati, tindakan ini tidak dapat dibatalkan.',
          iconKey: 'delete',
          position: 'top'
        }
      ];

      return allSteps.filter(step => {
        const element = document.querySelector(step.element);
        return element !== null;
      });
    }

    let currentTourStep = 0;
    let tourActive = false;
    let tourSteps = [];

    function startTour() {
      const tourCompleted = localStorage.getItem('tourCompleted');
      if (tourCompleted === 'true') {
        if (!confirm('Apakah Anda ingin melihat panduan lagi?')) {
          return;
        }
      }

      tourSteps = getAvailableTourSteps();
      
      if (tourSteps.length === 0) {
        alert('Tidak ada elemen yang dapat ditampilkan dalam panduan.');
        return;
      }

      tourActive = true;
      currentTourStep = 0;
      
      const overlay = document.getElementById('tourOverlay');
      overlay.style.display = 'block';
      setTimeout(() => {
        overlay.classList.add('active');
      }, 10);
      
      showTourStep(0);
    }

    function showTourStep(stepIndex) {
      if (stepIndex < 0 || stepIndex >= tourSteps.length) {
        endTour();
        return;
      }

      const step = tourSteps[stepIndex];
      const element = document.querySelector(step.element);

      if (!element) {
        if (stepIndex < tourSteps.length - 1) {
          showTourStep(stepIndex + 1);
        } else {
          endTour();
        }
        return;
      }

      const iconElement = document.getElementById('tourIcon');
      iconElement.innerHTML = tourIcons[step.iconKey] || tourIcons.menu;
      document.getElementById('tourTitle').textContent = step.title;
      document.getElementById('tourContent').textContent = step.content;
      document.getElementById('tourProgress').textContent = `${stepIndex + 1} / ${tourSteps.length}`;

      const prevBtn = document.getElementById('tourPrevBtn');
      const nextBtn = document.getElementById('tourNextBtn');
      
      prevBtn.style.display = stepIndex === 0 ? 'none' : 'flex';
      nextBtn.textContent = stepIndex === tourSteps.length - 1 ? 'Selesai' : 'Selanjutnya';

      const rect = element.getBoundingClientRect();
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      const scrollLeft = window.pageXOffset || document.documentElement.scrollLeft;

      const highlight = document.getElementById('tourHighlight');
      if (highlight) {
        highlight.classList.add('active');
        highlight.style.display = 'block';
        highlight.style.top = (rect.top + scrollTop - 4) + 'px';
        highlight.style.left = (rect.left + scrollLeft - 4) + 'px';
        highlight.style.width = (rect.width + 8) + 'px';
        highlight.style.height = (rect.height + 8) + 'px';
      }

      const tooltip = document.getElementById('tourTooltip');
      tooltip.style.display = 'block';
      tooltip.className = 'tour-tooltip ' + step.position;

      let tooltipTop, tooltipLeft;
      const tooltipWidth = Math.max(300, tooltip.offsetWidth || 350);
      const tooltipHeight = Math.max(180, tooltip.offsetHeight || 200);
      const spacing = 20;

      switch(step.position) {
        case 'top':
          tooltipTop = rect.top + scrollTop - tooltipHeight - spacing;
          tooltipLeft = rect.left + scrollLeft + (rect.width / 2) - (tooltipWidth / 2);
          break;
        case 'bottom':
          tooltipTop = rect.bottom + scrollTop + spacing;
          tooltipLeft = rect.left + scrollLeft + (rect.width / 2) - (tooltipWidth / 2);
          break;
        case 'left':
          tooltipTop = rect.top + scrollTop + (rect.height / 2) - (tooltipHeight / 2);
          tooltipLeft = rect.left + scrollLeft - tooltipWidth - spacing;
          break;
        case 'right':
          tooltipTop = rect.top + scrollTop + (rect.height / 2) - (tooltipHeight / 2);
          tooltipLeft = rect.right + scrollLeft + spacing;
          break;
        default:
          tooltipTop = rect.bottom + scrollTop + spacing;
          tooltipLeft = rect.left + scrollLeft + (rect.width / 2) - (tooltipWidth / 2);
      }

      const viewportWidth = window.innerWidth;
      const viewportHeight = window.innerHeight;

      if (tooltipLeft < 10) tooltipLeft = 10;
      if (tooltipLeft + tooltipWidth > viewportWidth - 10) {
        tooltipLeft = viewportWidth - tooltipWidth - 10;
      }
      if (tooltipTop < 10) tooltipTop = 10;
      if (tooltipTop + tooltipHeight > viewportHeight - 10) {
        tooltipTop = viewportHeight - tooltipHeight - 10;
      }

      tooltip.style.top = tooltipTop + 'px';
      tooltip.style.left = tooltipLeft + 'px';

      element.scrollIntoView({ behavior: 'smooth', block: 'center' });
      highlight.style.animation = 'pulse 2s infinite';
    }

    function nextTourStep() {
      if (currentTourStep < tourSteps.length - 1) {
        currentTourStep++;
        showTourStep(currentTourStep);
      } else {
        endTour();
      }
    }

    function prevTourStep() {
      if (currentTourStep > 0) {
        currentTourStep--;
        showTourStep(currentTourStep);
      }
    }

    function skipTour() {
      endTour();
    }

    function endTour() {
      tourActive = false;
      const overlay = document.getElementById('tourOverlay');
      if (overlay) {
        overlay.classList.remove('active');
        setTimeout(() => {
          overlay.style.display = 'none';
        }, 300);
      }
      const highlight = document.getElementById('tourHighlight');
      if (highlight) {
        highlight.classList.remove('active');
        highlight.style.display = 'none';
      }
      const tooltip = document.getElementById('tourTooltip');
      if (tooltip) {
        tooltip.style.display = 'none';
      }
      localStorage.setItem('tourCompleted', 'true');
    }

    const style = document.createElement('style');
    style.textContent = `
      @keyframes pulse {
        0%, 100% {
          box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.7), 0 0 20px rgba(47, 107, 49, 0.5);
        }
        50% {
          box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.7), 0 0 30px rgba(47, 107, 49, 0.8);
        }
      }
    `;
    document.head.appendChild(style);

    // Wait for DOM to be ready before adding event listeners
    document.addEventListener('DOMContentLoaded', function() {
      const tourOverlayEl = document.getElementById('tourOverlay');
      if (tourOverlayEl) {
        tourOverlayEl.addEventListener('click', function(e) {
          if (e.target === this) {
            endTour();
          }
        });
      }
    });

    document.addEventListener('keydown', function(e) {
      if (!tourActive) return;
      
      if (e.key === 'Escape') {
        endTour();
      } else if (e.key === 'ArrowRight' || e.key === 'Enter') {
        nextTourStep();
      } else if (e.key === 'ArrowLeft') {
        prevTourStep();
      }
    });
  </script>
