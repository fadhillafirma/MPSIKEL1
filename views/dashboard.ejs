<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard IKU-1 | CDC Universitas Andalas</title>

  <!-- Google Font & Chart.js -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    :root {
      --primary: #1976D2;
      --secondary: #42A5F5;
      --accent: #66BB6A;
      --bg: #ffffff;
      --card-bg: #fff;
      --text-dark: #2c3e50;
      --text-muted: #7f8c8d;
      --radius: 12px;
      --shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      margin: 0;
      color: var(--text-dark);
    }

    /* Header */
    .header {
      background: var(--card-bg);
      padding: 20px 50px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .header-left img {
      width: 70px;
      height: 70px;
      object-fit: contain;
    }

    .header-center {
      flex: 1;
      text-align: left;
      margin-left: 20px;
    }

    .header-center h1 {
      font-size: 28px;
      font-weight: 600;
      color: var(--text-dark);
      margin: 0;
    }

    .header-center p {
      font-size: 13px;
      color: var(--text-muted);
      margin: 4px 0 0 0;
    }

    .header-center .date {
      font-size: 14px;
      color: var(--primary);
      margin-top: 4px;
    }

    .header-right {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .header-right a {
      display: flex;
      align-items: center;
      gap: 8px;
      color: var(--primary);
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      padding: 8px 16px;
      border-radius: 6px;
      transition: background 0.3s;
    }

    .header-right a:hover {
      background: #f0f7ff;
    }

    /* Main Container */
    .container {
      max-width: 1400px;
      margin: 30px auto;
      padding: 0 50px;
    }

    /* Stats Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: var(--card-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 25px;
      text-align: center;
    }

    .stat-card h3 {
      font-size: 14px;
      color: var(--text-muted);
      margin: 0 0 10px 0;
      font-weight: 500;
    }

    .stat-card .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: var(--primary);
      margin: 0;
    }

    /* Main Layout */
    .main-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 25px;
      margin-bottom: 40px;
    }

    .left-column {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }

    .right-column {
      display: flex;
      flex-direction: column;
    }

    /* Chart Cards */
    .chart-card {
      background: var(--card-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 25px;
    }

    .chart-card h3 {
      font-size: 16px;
      font-weight: 600;
      margin: 0 0 20px 0;
      color: var(--text-dark);
    }

    .chart-container {
      height: 280px;
      position: relative;
    }

    .chart-container-large {
      height: 400px;
      position: relative;
    }

    /* Circular Chart Special Layout */
    .circular-chart-wrapper {
      display: flex;
      align-items: center;
      gap: 30px;
      height: 100%;
    }

    .circular-chart-container {
      width: 200px;
      height: 200px;
      position: relative;
    }

    .chart-legend {
      flex: 1;
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 15px;
      font-size: 13px;
      color: var(--text-muted);
    }

    .legend-color {
      width: 16px;
      height: 16px;
      border-radius: 50%;
    }

    .legend-square {
      width: 16px;
      height: 16px;
      border: 2px solid;
      border-radius: 2px;
    }

    /* Donut Chart Special Layout */
    .donut-chart-wrapper {
      display: flex;
      gap: 40px;
      align-items: center;
      height: 100%;
    }

    .donut-chart-container {
      width: 300px;
      height: 300px;
      position: relative;
    }

    .donut-details {
      flex: 1;
    }

    .detail-item {
      margin-bottom: 25px;
    }

    .detail-label {
      font-size: 13px;
      color: var(--text-muted);
      margin-bottom: 8px;
    }

    .detail-value {
      font-size: 28px;
      font-weight: 700;
      color: var(--text-dark);
    }

    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-top: 30px;
    }

    .action-btn {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 12px 20px;
      border-radius: 8px;
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.3s;
    }

    .btn-primary {
      background: var(--primary);
      color: #fff;
    }

    .btn-primary:hover {
      background: var(--secondary);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(25, 118, 210, 0.3);
    }

    .btn-success {
      background: var(--accent);
      color: #fff;
    }

    .btn-success:hover {
      background: #4caf50;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 187, 106, 0.3);
    }

    /* Footer */
    footer {
      text-align: center;
      padding: 30px;
      color: var(--text-muted);
      font-size: 13px;
      border-top: 1px solid #e9ecef;
      margin-top: 50px;
    }

    /* Responsive */
    @media (max-width: 1200px) {
      .main-content {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        padding: 20px;
        gap: 15px;
      }

      .header-left {
        flex-direction: column;
        text-align: center;
      }

      .header-center {
        margin-left: 0;
      }

      .container {
        padding: 0 20px;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      .circular-chart-wrapper,
      .donut-chart-wrapper {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>
  <!-- Header -->
  <div class="header">
    <div class="header-left">
      <img src="/images/logounand.png" alt="Logo UNAND">
    </div>
    <div class="header-center">
      <h1>CDC Universitas Andalas</h1>
      <p>Career Development Center Andalas University</p>
      <div class="date" id="currentDate"></div>
    </div>
    <div class="header-right">
    
    </div>
  </div>

  <!-- Main Content -->
  <main class="container">
    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <h3>Total Alumni</h3>
        <p class="stat-value"><%= data.totalAlumni %></p>
      </div>
      <div class="stat-card">
        <h3>Total Responden</h3>
        <p class="stat-value"><%= data.totalResponden %></p>
      </div>
      <div class="stat-card">
        <h3>Rata-rata Capaian IKU</h3>
        <p class="stat-value"><%= data.rataCapaian || '0' %> %</p>
      </div>
    </div>

    <!-- Main Layout - Two Columns -->
    <div class="main-content">
      <!-- Left Column -->
      <div class="left-column">
        <!-- Circular Chart -->
        <div class="chart-card">
          <h3>Distribusi Status Alumni</h3>
          <div class="circular-chart-wrapper">
            <div class="circular-chart-container">
              <canvas id="statusChart"></canvas>
            </div>
            <div class="chart-legend" id="statusLegend"></div>
          </div>
        </div>

        <!-- Line Graph -->
        <div class="chart-card">
          <h3>Grafik Pertumbuhan Capaian</h3>
          <div class="chart-container">
            <canvas id="lulusanChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Right Column -->
      <div class="right-column">
        <div class="chart-card" style="height: 100%;">
          <h3>Capaian IKU-1 UNAND:</h3>
          <div class="donut-chart-wrapper">
            <div class="donut-chart-container">
              <canvas id="donutChart"></canvas>
            </div>
            <div class="donut-details">
              <div class="detail-item">
                <div class="detail-label">Jumlah Responden:</div>
                <div class="detail-value"><%= data.totalResponden %></div>
              </div>
              <div class="detail-item">
                <div class="detail-label">Rata-rata Capaian:</div>
                <div class="detail-value"><%= data.rataCapaian || '0' %> %</div>
              </div>
              <div class="action-buttons">
                <a href="/pembobotan" class="action-btn btn-primary">
                  Detail Pembobotan
                </a>
                <a href="/riwayat" class="action-btn btn-success">
                  Riwayat Capaian
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer>© 2025 CDC Universitas Andalas — All Rights Reserved</footer>

  <script type="application/json" id="dashboard-data">
<%- JSON.stringify(data) %>
  </script>

  <script>
    const data = JSON.parse(document.getElementById('dashboard-data').textContent);

    // Display current date
    const dateElement = document.getElementById("currentDate");
    const today = new Date();
    const options = { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric' };
    dateElement.textContent = today.toLocaleDateString('id-ID', options);

    // Colors for charts
    const statusColors = ["#66BB6A", "#42A5F5", "#FFA726", "#EF5350", "#AB47BC"];
    
    // 1️⃣ Status Alumni (Circular Chart with Legend)
    if (data.status && data.status.length > 0) {
      const statusChart = new Chart(document.getElementById("statusChart"), {
        type: "doughnut",
        data: {
          labels: data.status.map(s => s.status),
          datasets: [{
            data: data.status.map(s => s.jumlah),
            backgroundColor: statusColors,
            borderWidth: 0
          }]
        },
        options: {
          plugins: {
            legend: { display: false }
          }
        }
      });

      // Create custom legend
      const legendContainer = document.getElementById("statusLegend");
      data.status.forEach((status, index) => {
        const legendItem = document.createElement("div");
        legendItem.className = "legend-item";
        const colorBox = document.createElement("div");
        colorBox.className = "legend-color";
        colorBox.style.backgroundColor = statusColors[index];
        legendItem.appendChild(colorBox);
        const label = document.createElement("span");
        label.textContent = `${status.status}: ${status.jumlah}`;
        legendItem.appendChild(label);
        legendContainer.appendChild(legendItem);
      });
    }

    // 2️⃣ Donut Chart for IKU-1 Capaian
    const rataCapaian = parseFloat(data.rataCapaian) || 0;
    const donutChart = new Chart(document.getElementById("donutChart"), {
      type: "doughnut",
      data: {
        labels: ["Capaian", "Target"],
        datasets: [{
          data: [rataCapaian, 100 - rataCapaian],
          backgroundColor: ["#1976D2", "#e3f2fd"],
          borderWidth: 0,
          cutout: "70%"
        }]
      },
      options: {
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: function(context) {
                return context.label + ": " + context.parsed + "%";
              }
            }
          }
        }
      },
      plugins: [{
        id: "centerText",
        afterDraw: function(chart) {
          const ctx = chart.ctx;
          ctx.font = "700 48px Poppins";
          ctx.fillStyle = "#2c3e50";
          ctx.textAlign = "center";
          ctx.textBaseline = "middle";
          ctx.fillText(rataCapaian.toFixed(2) + "%", chart.chartArea.left + (chart.chartArea.right - chart.chartArea.left) / 2,
            chart.chartArea.top + (chart.chartArea.bottom - chart.chartArea.top) / 2);
        }
      }]
    });

    // 3️⃣ Line Graph - Grafik Pertumbuhan Capaian
    if (data.lulusanPerTahun && data.lulusanPerTahun.length > 0) {
      // Convert year data to month data for display
      const months = Array.from({length: 12}, (_, i) => i + 1);
      const capaianData = [];
      
      // Generate sample capaian data based on lulusan data
      data.lulusanPerTahun.slice(0, 12).forEach((item, index) => {
        const baseValue = 30 + Math.random() * 30; // Random between 30-60%
        capaianData.push(Math.min(100, baseValue + (index * 2))); // Gradually increasing
      });

      new Chart(document.getElementById("lulusanChart"), {
        type: "line",
        data: {
          labels: months,
          datasets: [{
            label: "Capaian (%)",
            data: capaianData,
            fill: true,
            borderColor: "#42A5F5",
            backgroundColor: "rgba(66, 165, 245, 0.1)",
            pointBackgroundColor: "#1976D2",
            pointBorderColor: "#fff",
            pointBorderWidth: 2,
            tension: 0.4,
            pointRadius: 4
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
              max: 100,
              ticks: {
                stepSize: 25,
                color: "#555"
              },
              grid: {
                color: "#f0f0f0"
              }
            },
            x: {
              ticks: {
                color: "#555"
              },
              grid: {
                display: false
              }
            }
          },
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: "rgba(25, 118, 210, 0.9)",
              titleColor: "#fff",
              bodyColor: "#fff",
              cornerRadius: 6,
              displayColors: false
            }
          }
        }
      });
    }
  </script>
</body>
</html>
