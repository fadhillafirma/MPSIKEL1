        capaianData.push(Math.min(100, baseValue + (index * 2))); // Gradually increasing
      });

      new Chart(document.getElementById("lulusanChart"), {
        type: "line",
        data: {
          labels: months,
          datasets: [{
            label: "Capaian (%)",
