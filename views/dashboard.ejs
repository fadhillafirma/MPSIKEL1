      const labels = sortedForChart.map(item => item.prodi_nama);
      const alumniSeries = sortedForChart.map(item => parseInt(item.total_alumni) || 0);
      const respondenSeries = sortedForChart.map(item => parseInt(item.total_responden) || 0);

      const barCanvas = document.getElementById('prodiBarChart');
