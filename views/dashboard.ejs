        new Chart(barCanvas, {
          type: 'bar',
          data: {
            labels,
            datasets: [
              {
                label: 'Total Alumni',
                data: alumniSeries,
                backgroundColor: 'rgba(47, 107, 49, 0.35)',
                borderColor: '#2F6B31',
                borderWidth: 1.2
              },
              {
                label: 'Total Responden',
                data: respondenSeries,
                backgroundColor: 'rgba(83, 155, 88, 0.65)',
                borderColor: '#4CA858',
                borderWidth: 1.2
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                title: {
                  display: true,
                  text: 'Program Studi',
                  font: {
                    size: 16,
                    weight: 'bold'
                  },
                  padding: { top: 10, bottom: 10 }
                },
                ticks: {
                  maxRotation: 45,
                  minRotation: 0,
                  font: {
                    size: 13
                  }
                }
              },
              y: {
                title: {
                  display: true,
                  text: 'Jumlah (Orang)',
                  font: {
                    size: 16,
                    weight: 'bold'
                  },
                  padding: { top: 10, bottom: 10 }
                },
                beginAtZero: true,
                ticks: {
                  font: {
                    size: 13
                  },
                  callback: (value) => formatLabel(value)
                }
              }
            },
            plugins: {
              legend: {
                position: 'bottom',
                labels: {
                  font: {
                    size: 14,
                    weight: 'bold'
                  },
                  padding: 15
                }
              },
              tooltip: {
                titleFont: {
                  size: 14,
                  weight: 'bold'
                },
                bodyFont: {
                  size: 13
                },
                callbacks: {
                  label: (context) => `${context.dataset.label}: ${formatLabel(context.parsed.y)}`
                }
              }
            }
          }
        });
      }
    }

    // Donut Chart for IKU-1 Capaian
    const rataCapaian = parseFloat(data.rataCapaian) || 0;
    const donutChart = new Chart(document.getElementById("donutChart"), {
      type: "doughnut",
      data: {
        labels: ["Capaian", "Target"],
        datasets: [{
          data: [rataCapaian, 100 - rataCapaian],
            backgroundColor: ["#2F6B31", "#ddefe1"],
            borderWidth: 0,
          cutout: "70%"
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: { 
            display: false 
          },
          tooltip: {
            backgroundColor: 'rgba(47, 107, 49, 0.95)',
            titleColor: '#fff',
            bodyColor: '#fff',
            titleFont: {
              size: 15,
              weight: 'bold'
            },
            bodyFont: {
              size: 14
            },
            padding: 12,
            cornerRadius: 8,
            callbacks: {
              label: function(context) {
                return context.label + ": " + context.parsed + "%";
              }
            }
          }
        },
      },
      plugins: [{
        id: "centerText",
        afterDraw: function(chart) {
          const ctx = chart.ctx;
          const centerX = chart.chartArea.left + (chart.chartArea.right - chart.chartArea.left) / 2;
          const centerY = chart.chartArea.top + (chart.chartArea.bottom - chart.chartArea.top) / 2;
          
          ctx.font = "700 48px Poppins";
          ctx.fillStyle = "#2c3e50";
          ctx.textAlign = "center";
          ctx.textBaseline = "middle";
          ctx.fillText(rataCapaian.toFixed(2) + "%", centerX, centerY);
