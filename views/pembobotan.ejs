      localStorage.setItem('pembobotan', JSON.stringify(pembobotan));
      
      alert('Data pembobotan berhasil disimpan!');
      closeEditModal();
    }

    // Update multiplier display throughout the page
    // Catatan: Angka multiplier sudah tidak ditampilkan di kolom tabel
    // Hanya tampil "n x UMP" di semua tempat
    function updateMultiplierDisplay() {
      // Fungsi ini tetap ada untuk kompatibilitas, tapi tidak perlu update apapun
      // karena semua angka multiplier sudah dihapus dari tampilan
    }

    // Update waktu tunggu display throughout the page
    function updateWaktuTungguDisplay() {
      const waktu1 = pembobotan.waktu_tunggu_1;
      const waktu2 = pembobotan.waktu_tunggu_2;
      
      // Update header tabel
      const headerWaktu1 = document.querySelectorAll('.header-waktu-tunggu-1');
      const headerWaktu2 = document.querySelectorAll('.header-waktu-tunggu-2');
      
      headerWaktu1.forEach(el => {
        el.textContent = waktu1;
      });
      
      headerWaktu2.forEach(el => {
        el.textContent = waktu2;
      });
      
      // Update label di modal
      const labelWaktu1 = document.querySelectorAll('.waktu-tunggu-1');
      const labelWaktu2 = document.querySelectorAll('.waktu-tunggu-2');
      
      labelWaktu1.forEach(el => {
        el.textContent = waktu1;
      });
      
      labelWaktu2.forEach(el => {
        el.textContent = waktu2;
      });
    }

    // Update table values
    function updateTables() {
      const bekerjaRows = document.querySelectorAll('#bekerjaTable tbody tr');
      bekerjaRows[0].querySelectorAll('td')[1].textContent = pembobotan.bekerja.t6;
      bekerjaRows[0].querySelectorAll('td')[2].textContent = pembobotan.bekerja.t12_high;
      bekerjaRows[1].querySelectorAll('td')[1].textContent = pembobotan.bekerja.t6_low;
      bekerjaRows[1].querySelectorAll('td')[2].textContent = pembobotan.bekerja.t12;

      const wiraswastaRows = document.querySelectorAll('#wiraswastaTable tbody tr');
      wiraswastaRows[0].querySelectorAll('td')[1].textContent = pembobotan.wiraswasta.t6;
      wiraswastaRows[0].querySelectorAll('td')[2].textContent = pembobotan.wiraswasta.t12_high;
      wiraswastaRows[1].querySelectorAll('td')[1].textContent = pembobotan.wiraswasta.t6_low;
      wiraswastaRows[1].querySelectorAll('td')[2].textContent = pembobotan.wiraswasta.t12;
    }

    // Edit cell on click (quick edit)
    function editCell(element, key) {
      const currentValue = parseFloat(element.textContent);
      const newValue = prompt('Masukkan nilai baru:', currentValue);
      
      if (newValue !== null && !isNaN(newValue)) {
        element.textContent = parseFloat(newValue);
        saveToLocalStorage(key, parseFloat(newValue));
      }
    }

    // Save to localStorage (client-side persistence)
    function saveToLocalStorage(key, value) {
      if (key.startsWith('bekerja_')) {
        pembobotan.bekerja[key.replace('bekerja_', '').replace(/_(?=\d|low|high)/g, '')] = value;
      } else if (key.startsWith('wiraswasta_')) {
        pembobotan.wiraswasta[key.replace('wiraswasta_', '').replace(/_(?=\d|low|high)/g, '')] = value;
      } else if (key === 'pendidikan') {
        pembobotan.pendidikan = value;
      }
      localStorage.setItem('pembobotan', JSON.stringify(pembobotan));
    }

    // Close modals when clicking outside
    window.onclick = function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.classList.remove('active');
      }
    }

    // Load on page init
    loadUMPData();
    
    // Initialize multiplier display on page load
    document.addEventListener('DOMContentLoaded', function() {
      // Load pembobotan from localStorage if available
      const savedPembobotan = localStorage.getItem('pembobotan');
      if (savedPembobotan) {
        try {
          const parsed = JSON.parse(savedPembobotan);
          if (parsed.multiplier) {
            pembobotan.multiplier = parsed.multiplier;
          }
          // Load data pembobotan lainnya jika ada
          if (parsed.bekerja) pembobotan.bekerja = parsed.bekerja;
          if (parsed.wiraswasta) pembobotan.wiraswasta = parsed.wiraswasta;
          if (parsed.pendidikan !== undefined) pembobotan.pendidikan = parsed.pendidikan;
          if (parsed.waktu_tunggu_1 !== undefined) pembobotan.waktu_tunggu_1 = parsed.waktu_tunggu_1;
          if (parsed.waktu_tunggu_2 !== undefined) pembobotan.waktu_tunggu_2 = parsed.waktu_tunggu_2;
        } catch (e) {
          console.error('Error loading pembobotan from localStorage:', e);
        }
      }
      
      // Update multiplier display
      updateMultiplierDisplay();
      
      // Update waktu tunggu display
      updateWaktuTungguDisplay();
      
      // Update tables dengan data yang dimuat
      updateTables();
      document.getElementById('pendidikanValue').textContent = pembobotan.pendidikan;
      
      // Update UMP table setelah data dimuat
      setTimeout(() => {
        updateUMPTable();
      }, 500);
    });
  </script>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('open');
    }

    // Update active menu item based on current page
    document.addEventListener('DOMContentLoaded', function() {
      const currentPath = window.location.pathname;
      const menuItems = document.querySelectorAll('.menu-item');
      
      menuItems.forEach(item => {
        const href = item.getAttribute('href');
        if (href === currentPath) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
    });

    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(event) {
      const sidebar = document.getElementById('sidebar');
      const toggleBtn = document.querySelector('.mobile-menu-toggle');
      
      if (window.innerWidth <= 768) {
        if (sidebar && toggleBtn && !sidebar.contains(event.target) && !toggleBtn.contains(event.target) && sidebar.classList.contains('open')) {
          sidebar.classList.remove('open');
        }
      }
    });

    // Tour Guide Script
    const tourIcons = {
      menu: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>',
      weight: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>',
      table: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>',
      edit: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>',
      map: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon><line x1="8" y1="2" x2="8" y2="18"></line><line x1="16" y1="6" x2="16" y2="22"></line></svg>'
    };

    function getAvailableTourSteps() {
      const allSteps = [
        {
          element: '#sidebar',
          title: 'Menu Navigasi',
          content: 'Ini adalah menu navigasi utama. Gunakan menu ini untuk berpindah antar halaman seperti Dashboard, Riwayat Capaian, Upload Data, dan lainnya.',
          iconKey: 'menu',
          position: 'right'
        },
        {
          element: '.left-section',
          title: 'Pencatatan Pembobotan',
          content: 'Bagian ini menampilkan data pembobotan untuk perhitungan IKU-1, termasuk pembobotan untuk status Bekerja, Wiraswasta, dan Melanjutkan Studi.',
          iconKey: 'weight',
          position: 'top'
        },
        {
          element: '#bekerjaTable',
          title: 'Pembobotan Status Bekerja',
          content: 'Tabel ini menampilkan nilai pembobotan untuk alumni yang bekerja berdasarkan gaji dan masa tunggu mendapatkan pekerjaan. Klik pada sel untuk mengedit nilai.',
          iconKey: 'table',
          position: 'top'
        },
        {
          element: '#wiraswastaTable',
          title: 'Pembobotan Status Wiraswasta',
          content: 'Tabel ini menampilkan nilai pembobotan untuk alumni yang berwiraswasta berdasarkan pendapatan dan masa tunggu. Klik pada sel untuk mengedit nilai.',
          iconKey: 'table',
          position: 'top'
        },
        {
          element: '.card.highlight',
          title: 'Pembobotan Melanjutkan Studi',
          content: 'Nilai pembobotan untuk alumni yang melanjutkan studi. Klik pada nilai untuk mengedit.',
          iconKey: 'weight',
          position: 'top'
        },
        {
          element: 'button[onclick="openEditModal()"]',
          title: 'Edit Data Pembobotan',
          content: 'Tombol ini membuka modal untuk mengedit semua nilai pembobotan sekaligus. Gunakan untuk mengubah multiplier UMP dan semua nilai pembobotan.',
          iconKey: 'edit',
          position: 'top'
        },
        {
          element: '.right-section',
          title: 'Upah Minimum Provinsi',
          content: 'Bagian ini menampilkan data Upah Minimum Provinsi (UMP) yang digunakan sebagai acuan perhitungan pembobotan berdasarkan gaji/pendapatan.',
          iconKey: 'map',
          position: 'top'
        },
        {
          element: 'button[onclick="openEditUMPModal()"]',
          title: 'Tambah/Edit Data UMP',
          content: 'Tombol ini membuka modal untuk menambah atau mengedit data Upah Minimum Provinsi. Data UMP digunakan dalam perhitungan pembobotan.',
          iconKey: 'edit',
          position: 'top'
        }
      ];

      return allSteps.filter(step => {
        const element = document.querySelector(step.element);
        return element !== null;
      });
    }

    let currentTourStep = 0;
    let tourActive = false;
    let tourSteps = [];

    function startTour() {
      const tourCompleted = localStorage.getItem('tourCompleted');
      if (tourCompleted === 'true') {
        if (!confirm('Apakah Anda ingin melihat panduan lagi?')) {
          return;
        }
      }

      tourSteps = getAvailableTourSteps();
      
      if (tourSteps.length === 0) {
        alert('Tidak ada elemen yang dapat ditampilkan dalam panduan.');
        return;
      }

      tourActive = true;
      currentTourStep = 0;
      
      const overlay = document.getElementById('tourOverlay');
      overlay.style.display = 'block';
      setTimeout(() => {
        overlay.classList.add('active');
      }, 10);
      
      showTourStep(0);
    }

    function showTourStep(stepIndex) {
      if (stepIndex < 0 || stepIndex >= tourSteps.length) {
        endTour();
        return;
      }

      const step = tourSteps[stepIndex];
      const element = document.querySelector(step.element);

      if (!element) {
        if (stepIndex < tourSteps.length - 1) {
          showTourStep(stepIndex + 1);
        } else {
          endTour();
        }
        return;
      }

      const iconElement = document.getElementById('tourIcon');
      iconElement.innerHTML = tourIcons[step.iconKey] || tourIcons.menu;
      document.getElementById('tourTitle').textContent = step.title;
      document.getElementById('tourContent').textContent = step.content;
      document.getElementById('tourProgress').textContent = `${stepIndex + 1} / ${tourSteps.length}`;

      const prevBtn = document.getElementById('tourPrevBtn');
      const nextBtn = document.getElementById('tourNextBtn');
      
      prevBtn.style.display = stepIndex === 0 ? 'none' : 'flex';
      nextBtn.textContent = stepIndex === tourSteps.length - 1 ? 'Selesai' : 'Selanjutnya';

      const rect = element.getBoundingClientRect();
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      const scrollLeft = window.pageXOffset || document.documentElement.scrollLeft;

      const highlight = document.getElementById('tourHighlight');
      highlight.classList.add('active');
      highlight.style.top = (rect.top + scrollTop - 4) + 'px';
      highlight.style.left = (rect.left + scrollLeft - 4) + 'px';
      highlight.style.width = (rect.width + 8) + 'px';
      highlight.style.height = (rect.height + 8) + 'px';

      const tooltip = document.getElementById('tourTooltip');
      tooltip.style.display = 'block';
      tooltip.className = 'tour-tooltip ' + step.position;

      let tooltipTop, tooltipLeft;
      const tooltipWidth = Math.max(300, tooltip.offsetWidth || 350);
      const tooltipHeight = Math.max(180, tooltip.offsetHeight || 200);
      const spacing = 20;

      switch(step.position) {
        case 'top':
          tooltipTop = rect.top + scrollTop - tooltipHeight - spacing;
          tooltipLeft = rect.left + scrollLeft + (rect.width / 2) - (tooltipWidth / 2);
          break;
        case 'bottom':
          tooltipTop = rect.bottom + scrollTop + spacing;
          tooltipLeft = rect.left + scrollLeft + (rect.width / 2) - (tooltipWidth / 2);
          break;
        case 'left':
          tooltipTop = rect.top + scrollTop + (rect.height / 2) - (tooltipHeight / 2);
          tooltipLeft = rect.left + scrollLeft - tooltipWidth - spacing;
          break;
        case 'right':
          tooltipTop = rect.top + scrollTop + (rect.height / 2) - (tooltipHeight / 2);
          tooltipLeft = rect.right + scrollLeft + spacing;
          break;
        default:
          tooltipTop = rect.bottom + scrollTop + spacing;
          tooltipLeft = rect.left + scrollLeft + (rect.width / 2) - (tooltipWidth / 2);
      }

      const viewportWidth = window.innerWidth;
      const viewportHeight = window.innerHeight;

      if (tooltipLeft < 10) tooltipLeft = 10;
      if (tooltipLeft + tooltipWidth > viewportWidth - 10) {
        tooltipLeft = viewportWidth - tooltipWidth - 10;
      }
      if (tooltipTop < 10) tooltipTop = 10;
      if (tooltipTop + tooltipHeight > viewportHeight - 10) {
        tooltipTop = viewportHeight - tooltipHeight - 10;
      }

      tooltip.style.top = tooltipTop + 'px';
      tooltip.style.left = tooltipLeft + 'px';

      element.scrollIntoView({ behavior: 'smooth', block: 'center' });
      highlight.style.animation = 'pulse 2s infinite';
    }

    function nextTourStep() {
      if (currentTourStep < tourSteps.length - 1) {
        currentTourStep++;
        showTourStep(currentTourStep);
      } else {
        endTour();
      }
    }

    function prevTourStep() {
      if (currentTourStep > 0) {
        currentTourStep--;
        showTourStep(currentTourStep);
      }
    }

    function skipTour() {
      endTour();
    }

    function endTour() {
      tourActive = false;
      const overlay = document.getElementById('tourOverlay');
      overlay.classList.remove('active');
      setTimeout(() => {
        overlay.style.display = 'none';
      }, 300);
      const highlight = document.getElementById('tourHighlight');
      highlight.classList.remove('active');
      highlight.style.display = 'none';
      document.getElementById('tourTooltip').style.display = 'none';
      localStorage.setItem('tourCompleted', 'true');
    }

    const style = document.createElement('style');
    style.textContent = `
      @keyframes pulse {
        0%, 100% {
          box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.7), 0 0 20px rgba(47, 107, 49, 0.5);
        }
        50% {
          box-shadow: 0 0 0 9999px rgba(0, 0, 0, 0.7), 0 0 30px rgba(47, 107, 49, 0.8);
        }
      }
    `;
    document.head.appendChild(style);

    document.getElementById('tourOverlay').addEventListener('click', function(e) {
      if (e.target === this) {
        endTour();
      }
    });

    document.addEventListener('keydown', function(e) {
      if (!tourActive) return;
      
      if (e.key === 'Escape') {
        endTour();
      } else if (e.key === 'ArrowRight' || e.key === 'Enter') {
        nextTourStep();
      } else if (e.key === 'ArrowLeft') {
        prevTourStep();
      }
    });
  </script>
