    <div class="sidebar-footer">
      <!-- Tour Guide Button -->
      <button class="start-tour-btn" id="startTourBtn" onclick="startTour()">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <circle cx="12" cy="12" r="10"></circle>
          <path d="M12 16v-4M12 8h.01"></path>
        </svg>
        Mulai Panduan
      </button>
      <div class="user-info">
        <div class="user-avatar">
          <%= typeof user !== 'undefined' && user ? user.username.charAt(0).toUpperCase() : 'A' %>
        </div>
        <div class="user-details">
          <div class="user-name"><%= typeof user !== 'undefined' && user ? user.username : 'Admin' %></div>
          <div class="user-role"><%= typeof user !== 'undefined' && user && user.role ? user.role : 'Admin' %></div>
