        <!-- Form Sections - Horizontal Layout -->
        <div class="form-sections">
          <!-- Update Username Section -->
          <div class="form-section">
            <h3>Ubah Username</h3>
            <form action="/profile/update-username" method="POST">
              <div class="form-group">
                <label for="newUsername">Username Baru</label>
                <input 
                  type="text" 
                  id="newUsername" 
                  name="newUsername" 
                  value="<%= user.username %>"
                  required
                  minlength="3"
                  maxlength="50"
                >
                <div class="help-text">Username harus terdiri dari 3-50 karakter</div>
              </div>
              <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                    <polyline points="17 21 17 13 7 13 7 21"></polyline>
                    <polyline points="7 3 7 8 15 8"></polyline>
                  </svg>
                  Simpan Username
                </button>
              </div>
            </form>
          </div>

          <!-- Update Email Section -->
          <div class="form-section">
            <h3>Ubah Email</h3>
            <form action="/profile/update-email" method="POST">
              <div class="form-group">
                <label for="newEmail">Email Baru</label>
                <input 
                  type="email" 
                  id="newEmail" 
                  name="newEmail" 
                  value="<%= user.email || '' %>"
                  required
                >
                <div class="help-text">Masukkan alamat email yang valid</div>
              </div>
              <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                  Simpan Email
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Change Password Section - Full Width Horizontal -->
        <div class="form-section" style="margin-top: 30px;">
          <h3>Ubah Password</h3>
          <form action="/profile/change-password" method="POST" id="changePasswordForm" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; align-items: end;">
            <div class="form-group">
              <label for="currentPassword">Password Saat Ini</label>
              <input 
                type="password" 
                id="currentPassword" 
                name="currentPassword" 
                required
                minlength="6"
              >
              <div class="help-text">Masukkan password saat ini</div>
            </div>
            <div class="form-group">
              <label for="newPassword">Password Baru</label>
              <input 
                type="password" 
                id="newPassword" 
                name="newPassword" 
                required
                minlength="6"
              >
              <div class="help-text">Password minimal 6 karakter</div>
            </div>
            <div class="form-group">
              <label for="confirmPassword">Konfirmasi Password</label>
              <input 
                type="password" 
                id="confirmPassword" 
                name="confirmPassword" 
                required
                minlength="6"
              >
              <div class="help-text">Masukkan kembali password baru</div>
            </div>
            <div class="btn-group" style="grid-column: 1 / -1; margin-top: 0;">
              <button type="submit" class="btn btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                Ubah Password
              </button>
            </div>
          </form>
        </div>
      </div>
  </main>

