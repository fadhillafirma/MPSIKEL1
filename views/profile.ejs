  <!-- Main Content Wrapper -->
  <div class="main-wrapper">
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        <button class="mobile-menu-toggle" onclick="toggleSidebar()">☰</button>
        <div class="header-center">
          <h1>Profil Admin</h1>
          <p>Career Development Center Andalas University</p>
        </div>
      </div>
      <div class="header-right">
        <!-- Empty for now -->
      </div>
    </div>

    <!-- Main Content -->
    <main class="container">
      <!-- Alert Messages -->
      <% if (typeof msg !== 'undefined' && msg) { %>
        <div class="alert <%= msg.includes('Error') || msg.includes('Gagal') ? 'alert-error' : (msg.includes('Berhasil') ? 'alert-success' : 'alert-info') %>">
          <span><%= msg %></span>
          <span class="alert-close" onclick="this.parentElement.style.display='none'">×</span>
        </div>
      <% } %>

      <!-- Profile Card -->
      <div class="profile-card">
        <h2>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Profil Admin
        </h2>

        <!-- User Information -->
        <div class="profile-info">
          <div class="info-item">
            <label>User ID</label>
            <div class="value">#<%= user.id %></div>
          </div>
          <div class="info-item">
            <label>Username</label>
            <div class="value"><%= user.username %></div>
          </div>
          <div class="info-item">
            <label>Email</label>
            <div class="value"><%= user.email || '-' %></div>
          </div>
          <div class="info-item">
            <label>Role</label>
            <div class="value"><%= user.role || 'Admin' %></div>
          </div>
          <div class="info-item">
            <label>Status</label>
            <div class="value">
              <span style="padding: 4px 10px; border-radius: 12px; font-size: 12px; font-weight: 600; background: <%= user.is_active == 1 ? '#d4edda' : '#f8d7da' %>; color: <%= user.is_active == 1 ? '#155724' : '#721c24' %>;">
                <%= user.is_active == 1 ? 'Aktif' : 'Tidak Aktif' %>
              </span>
            </div>
          </div>
          <div class="info-item">
            <label>Tanggal Dibuat</label>
            <div class="value" style="font-size: 13px;"><%= user.createdAt || '-' %></div>
          </div>
          <div class="info-item">
            <label>Terakhir Diupdate</label>
            <div class="value" style="font-size: 13px;"><%= user.updatedAt || '-' %></div>
          </div>
