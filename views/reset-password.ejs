<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password | CDC Universitas Andalas</title>
  
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary: #2F6B31;
      --primary-dark: #1F4B24;
      --secondary: #4CA858;
      --accent: #6BCF78;
      --text-dark: #1f2e24;
      --text-muted: #6d7a6f;
      --white: #ffffff;
      --shadow: 0 20px 60px rgba(19, 56, 30, 0.3);
    }

    body {
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      overflow: hidden;
      position: relative;
    }

    .left-section {
      flex: 1;
      background: var(--white);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
      position: relative;
      overflow-y: auto;
    }

    .right-section {
      flex: 1;
      background: url('/images/RektoratView.jpg') center/cover no-repeat;
      background-size: cover;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .right-section::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(47, 107, 49, 0.3), rgba(31, 75, 36, 0.4));
      z-index: 1;
    }

    .right-section-content {
      position: relative;
      z-index: 2;
      text-align: center;
      color: var(--white);
      padding: 40px;
    }

    .right-section-content img {
      width: 150px;
      height: 150px;
      margin-bottom: 30px;
      filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
    }

    .right-section-content h1 {
      font-size: 36px;
      font-weight: 700;
      margin-bottom: 15px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      letter-spacing: -0.5px;
    }

    .right-section-content p {
      font-size: 18px;
      font-weight: 300;
      opacity: 0.95;
      line-height: 1.6;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
      margin-bottom: 10px;
    }

    .login-container {
      width: 100%;
      max-width: 480px;
      animation: slideIn 0.6s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .logo-section {
      text-align: center;
      margin-bottom: 40px;
    }

    .logo-section img {
      width: 100px;
      height: 100px;
      margin-bottom: 20px;
      filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.1));
    }

    .logo-section h1 {
      font-size: 28px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 8px;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .logo-section p {
      font-size: 14px;
      color: var(--text-muted);
      font-weight: 400;
    }

    .form-header {
      margin-bottom: 35px;
    }

    .form-header h2 {
      font-size: 32px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 8px;
    }

    .form-header p {
      font-size: 14px;
      color: var(--text-muted);
      font-weight: 400;
    }

    .alert-error {
      background: #fee;
      border: 1px solid #fcc;
      color: #c33;
      padding: 12px 16px;
      border-radius: 10px;
      margin-bottom: 20px;
      font-size: 13px;
      display: flex;
      align-items: center;
      gap: 8px;
      animation: shake 0.5s ease-in-out;
    }

    .alert-success {
      background: #d4edda;
      border: 1px solid #c3e6cb;
      color: #155724;
      padding: 12px 16px;
      border-radius: 10px;
      margin-bottom: 20px;
      font-size: 13px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-8px); }
      75% { transform: translateX(8px); }
    }

    .form-group {
      margin-bottom: 22px;
    }

    .form-group label {
      display: block;
      font-size: 13px;
      font-weight: 500;
      color: var(--text-dark);
      margin-bottom: 8px;
    }

    .password-wrapper {
      position: relative;
    }

    .form-group input {
      width: 100%;
      padding: 14px 16px;
      border: 2px solid #e5e7eb;
      border-radius: 10px;
      font-size: 14px;
      font-family: 'Poppins', sans-serif;
      transition: all 0.3s ease;
      background: #fafafa;
    }

    .form-group input:focus {
      outline: none;
      border-color: var(--primary);
      background: var(--white);
      box-shadow: 0 0 0 3px rgba(47, 107, 49, 0.1);
    }

    .toggle-password {
      position: absolute;
      right: 14px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      cursor: pointer;
      padding: 4px;
      z-index: 2;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .toggle-password svg {
      width: 20px;
      height: 20px;
      stroke: var(--text-muted);
    }

    .toggle-password:hover svg {
      stroke: var(--primary);
    }

    .password-strength {
      font-size: 12px;
      margin-top: 5px;
      color: var(--text-muted);
    }

    .btn-submit {
      width: 100%;
      padding: 16px;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: var(--white);
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      font-family: 'Poppins', sans-serif;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(47, 107, 49, 0.3);
      position: relative;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 30px rgba(47, 107, 49, 0.4);
    }

    .btn-submit:disabled {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .back-link {
      text-align: center;
      margin-top: 20px;
    }

    .back-link a {
      color: var(--primary);
      text-decoration: none;
      font-weight: 500;
      font-size: 14px;
      transition: color 0.3s;
    }

    .back-link a:hover {
      color: var(--primary-dark);
      text-decoration: underline;
    }

    .form-footer {
      text-align: center;
      margin-top: 30px;
      padding-top: 25px;
      border-top: 1px solid #e5e7eb;
      color: var(--text-muted);
      font-size: 12px;
    }

    /* Responsive */
    @media (max-width: 968px) {
      body {
        flex-direction: column;
      }

      .left-section {
        flex: 1;
        padding: 40px 30px;
      }

      .right-section {
        flex: 0 0 300px;
        min-height: 300px;
      }
    }

    @media (max-width: 480px) {
      .right-section {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="left-section">
    <div class="login-container">
      <div class="logo-section">
        <img src="/images/logounand.png" alt="Logo UNAND">
        <h1>CDC Universitas Andalas</h1>
        <p>Career Development Center</p>
      </div>

      <div class="form-header">
        <h2>Reset Password</h2>
        <p>Masukkan password baru Anda</p>
      </div>

      <% if (error) { %>
        <div class="alert-error">
          <%= error %>
        </div>
      <% } %>

      <% if (msg) { %>
        <div class="alert-success">
          <%= msg %>
        </div>
      <% } %>

      <form action="/reset-password" method="POST" id="resetPasswordForm">
        <div class="form-group">
          <label for="newPassword">Password Baru</label>
          <div class="password-wrapper">
            <input 
              type="password" 
              id="newPassword" 
              name="newPassword" 
              placeholder="Masukkan password baru (minimal 6 karakter)"
              required
              minlength="6"
              autocomplete="new-password"
              autofocus
            >
            <button type="button" class="toggle-password" onclick="togglePassword('newPassword', 'toggleNewPassword')" id="toggleNewPassword">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </button>
          </div>
          <div class="password-strength">Minimal 6 karakter</div>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Konfirmasi Password</label>
          <div class="password-wrapper">
            <input 
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              placeholder="Konfirmasi password baru"
              required
              minlength="6"
              autocomplete="new-password"
            >
            <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword', 'toggleConfirmPassword')" id="toggleConfirmPassword">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </button>
          </div>
        </div>

        <button type="submit" class="btn-submit" id="submitBtn">
          Reset Password
        </button>
      </form>

      <div class="back-link">
        <a href="/login">← Kembali ke halaman login</a>
      </div>

      <div class="form-footer">
        <p>© 2025 CDC Universitas Andalas. All rights reserved.</p>
      </div>
    </div>
  </div>

  <div class="right-section">
    <div class="right-section-content">
      <img src="/images/logounand.png" alt="Logo UNAND">
      <h1>CDC Universitas Andalas</h1>
      <p>Career Development Center</p>
      <p class="tagline">Membangun Karir, Mengukir Masa Depan</p>
    </div>
  </div>

  <script>
    function togglePassword(inputId, buttonId) {
      const passwordInput = document.getElementById(inputId);
      const button = document.getElementById(buttonId);
      
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        button.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
          </svg>
        `;
      } else {
        passwordInput.type = 'password';
        button.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        `;
      }
    }

    // Validate password match
    const confirmPassword = document.getElementById('confirmPassword');
    confirmPassword.addEventListener('input', function() {
      const newPassword = document.getElementById('newPassword').value;
      const confirmPass = this.value;
      
      if (confirmPass && newPassword !== confirmPass) {
        this.setCustomValidity('Password tidak cocok');
      } else {
        this.setCustomValidity('');
      }
    });

    // Form submission
    document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
      const newPassword = document.getElementById('newPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      
      if (newPassword !== confirmPassword) {
        e.preventDefault();
        alert('Password dan konfirmasi password tidak cocok');
        return false;
      }
      
      const btn = document.getElementById('submitBtn');
      btn.disabled = true;
      btn.textContent = 'Mengubah password...';
    });
  </script>
</body>
</html>

