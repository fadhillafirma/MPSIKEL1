<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Upload Data CSV | CDC Universitas Andalas</title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #2F6B31;
      --secondary: #4CA858;
      --accent: #6BCF78;
      --bg: #ffffff;
      --card-bg: #fff;
      --text-dark: #1f2e24;
      --text-muted: #6d7a6f;
      --radius: 12px;
      --shadow: 0 2px 8px rgba(0,0,0,0.05);
      --border: #e9ecef;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      min-height: 100vh;
      margin: 0;
      color: var(--text-dark);
    }

    /* Header */
    .header {
      background: var(--card-bg);
      padding: 20px 50px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      border-bottom: 1px solid var(--border);
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .header-left img {
      width: 70px;
      height: 70px;
      object-fit: contain;
    }

    .header-center {
      flex: 1;
      text-align: left;
      margin-left: 20px;
    }

    .header-center h1 {
      font-size: 28px;
      font-weight: 600;
      color: var(--text-dark);
      margin: 0;
    }

    .header-center p {
      font-size: 13px;
      color: var(--text-muted);
      margin: 4px 0 0 0;
    }

    .header-right {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .header-right a {
      display: flex;
      align-items: center;
      gap: 8px;
      color: white;
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      padding: 12px 24px;
      border-radius: 8px;
      transition: all 0.3s;
      background: var(--primary);
    }

    .header-right a:hover {
      background: var(--secondary);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(47, 107, 49, 0.3);
    }

    /* Main Container */
    .container {
      max-width: 1200px;
      margin: 30px auto;
      padding: 0 50px;
    }

    .upload-card {
      background: var(--card-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 30px;
      margin-bottom: 25px;
      border: 1px solid var(--border);
    }

    .upload-card h2 {
      font-size: 22px;
      font-weight: 600;
      color: var(--text-dark);
      margin: 0 0 10px 0;
    }

    .upload-card p {
      font-size: 14px;
      color: var(--text-muted);
      margin: 0 0 30px 0;
      line-height: 1.6;
    }

    .upload-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }

    .upload-column,
    .info-column {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .upload-form label {
      display: block;
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 10px;
      color: var(--text-dark);
    }

    .import-type-group {
      margin-bottom: 24px;
    }

    .import-type-group label {
      margin-bottom: 12px;
    }

    .import-type-options {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .import-type-options label {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 18px;
      border-radius: 8px;
      background: #f8f9fa;
      border: 2px solid var(--border);
      color: var(--text-dark);
      font-weight: 500;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .import-type-options input[type="radio"] {
      accent-color: var(--primary);
      width: 16px;
      height: 16px;
      margin: 0;
    }

    .import-type-options label:hover {
      background: #e9ecef;
      border-color: var(--primary);
    }

    .import-type-options input[type="radio"]:checked {
      background-color: var(--primary);
    }

    .import-type-options label:has(input[type="radio"]:checked) {
      background: rgba(47, 107, 49, 0.1);
      border-color: var(--primary);
      color: var(--primary);
    }

    .file-input-wrapper {
      margin-bottom: 24px;
    }

    .file-input-wrapper input[type="file"] {
      width: 100%;
      padding: 12px 16px;
      border-radius: 8px;
      border: 2px solid var(--border);
      background: white;
      font-size: 14px;
      font-family: 'Poppins', sans-serif;
      transition: all 0.3s;
      cursor: pointer;
    }

    .file-input-wrapper input[type="file"]:focus,
    .file-input-wrapper input[type="file"]:hover {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(47, 107, 49, 0.1);
    }

    .upload-form button {
      width: 100%;
      padding: 14px 24px;
      border-radius: 8px;
      border: none;
      font-size: 15px;
      font-weight: 600;
      background: var(--primary);
      color: #fff;
      cursor: pointer;
      transition: all 0.3s;
      font-family: 'Poppins', sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .upload-form button:hover {
      background: var(--secondary);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(47, 107, 49, 0.3);
    }

    .upload-form button:disabled {
      background: #e9ecef;
      color: var(--text-muted);
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .info-column h3 {
      font-size: 18px;
      font-weight: 600;
      color: var(--text-dark);
      margin: 0 0 20px 0;
    }

    .info-grid {
      display: grid;
      gap: 20px;
    }

    .info-box {
      background: #f8f9fa;
      border: 1px solid var(--border);
      border-left: 4px solid var(--primary);
      border-radius: var(--radius);
      padding: 20px;
    }

    .info-box h3 {
      font-size: 16px;
      font-weight: 600;
      margin: 0 0 15px 0;
      color: var(--text-dark);
    }

    .info-box ul {
      list-style: none;
      display: grid;
      gap: 12px;
      margin: 0;
      padding: 0;
    }

    .info-box li {
      font-size: 13px;
      color: var(--text-muted);
      padding-left: 22px;
      position: relative;
      line-height: 1.6;
    }

    .info-box li:before {
      content: "•";
      position: absolute;
      left: 0;
      top: 0;
      color: var(--primary);
      font-size: 18px;
      font-weight: bold;
    }

    .info-box code {
      background: rgba(47, 107, 49, 0.1);
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 12px;
      color: var(--primary);
      font-family: 'Courier New', monospace;
    }

    .info-box strong {
      color: var(--text-dark);
      font-weight: 600;
    }

    /* Alerts */
    .alert {
      padding: 15px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-size: 14px;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 10px;
      animation: slideIn 0.3s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .alert-success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .alert-error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .alert-info {
      background: #d1ecf1;
      color: #0c5460;
      border: 1px solid #bee5eb;
    }

    .alert-close {
      margin-left: auto;
      cursor: pointer;
      font-size: 18px;
      font-weight: bold;
      opacity: 0.7;
      transition: opacity 0.3s;
    }

    .alert-close:hover {
      opacity: 1;
    }

    /* Responsive */
    @media (max-width: 1200px) {
      .upload-layout {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        padding: 20px;
        gap: 15px;
      }

      .header-center {
        margin-left: 0;
        text-align: center;
      }

      .container {
        padding: 0 20px;
      }

      .upload-card {
        padding: 25px;
      }

      .import-type-options {
        flex-direction: column;
        gap: 10px;
      }

      .import-type-options label {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <!-- Header -->
  <div class="header">
    <div class="header-left">
      <img src="/images/logounand.png" alt="Logo UNAND">
    </div>
    <div class="header-center">
      <h1>CDC Universitas Andalas</h1>
      <p>Career Development Center Andalas University</p>
    </div>
    <div class="header-right">
      <a href="/dashboard">Kembali ke Dashboard</a>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container">
    <!-- Alert Message -->
    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="alert <%= msg.includes('Error') || msg.includes('Gagal') ? 'alert-error' : (msg.includes('Berhasil') ? 'alert-success' : 'alert-info') %>">
        <span><%= msg %></span>
        <span class="alert-close" onclick="this.parentElement.style.display='none'">×</span>
      </div>
    <% } %>

    <!-- Upload Card -->
    <div class="upload-card">
      <h2>Upload Data CSV</h2>
      <p>Pilih file CSV yang berisi data alumni atau responden untuk diimpor ke sistem</p>

      <div class="upload-layout">
        <div class="upload-column">
          <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data" class="upload-form">
            <div class="import-type-group">
              <label>Tujuan Import</label>
              <div class="import-type-options">
                <label>
                  <input type="radio" name="importType" value="alumni" id="importTypeAlumni" checked>
                  <span>Data Alumni (Wisuda)</span>
                </label>
                <label>
                  <input type="radio" name="importType" value="responden" id="importTypeResponden">
                  <span>Data Responden Tracer Study</span>
                </label>
              </div>
            </div>

            <label for="csvfile">Pilih File CSV</label>
            <div class="file-input-wrapper">
              <input type="file" name="csvfile" id="csvfile" accept=".csv" required>
            </div>
            <button type="submit" id="submitBtn">
              <span id="btnText">Proses CSV</span>
              <span id="btnLoader" style="display: none;">Memproses...</span>
            </button>
          </form>
        </div>

        <div class="info-column">
          <h3>Panduan Format CSV</h3>
          <div class="info-grid">
            <div class="info-box" id="infoBoxAlumni">
              <h3>Format CSV - Import Data Alumni</h3>
              <ul>
                <li>Kolom minimal: <strong>No, NIM, Nama, Program Studi, Fakultas</strong></li>
                <li>Contoh format: <code>Data Panjang Semua Fakultas Periode Wisuda...</code></li>
                <li>Data digunakan untuk menambah/memutakhirkan tabel `alumni`.</li>
                <li>Pastikan nama prodi & fakultas sesuai dengan data master.</li>
              </ul>
            </div>

            <div class="info-box" id="infoBoxResponden" style="display: none;">
              <h3>Format CSV - Import Data Responden</h3>
              <ul>
                <li>Kolom minimal: <strong>Nama/Nama Lengkap</strong>, <strong>NIM</strong>, <strong>Program Studi</strong>, <strong>Fakultas</strong> (bisa format tracer maupun format wisuda).</li>
                <li>Contoh: <code>Data Bersih Sistem Informasi...</code>, <code>databersihkeperawatan.csv</code>, dan file tracer sejenis.</li>
                <li>Data akan disimpan ke tabel <code>responden</code> dan otomatis memperbarui kartu Total Responden di dashboard.</li>
                <li>Pastikan nama prodi & fakultas sesuai dengan master data agar baris tidak dilewati.</li>
              </ul>
            </div>

          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Handle CSV Upload Form
    const uploadForm = document.getElementById('uploadForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = document.getElementById('btnText');
    const btnLoader = document.getElementById('btnLoader');
    const importTypeRadios = document.querySelectorAll('input[name="importType"]');
    const infoBoxAlumni = document.getElementById('infoBoxAlumni');
    const infoBoxResponden = document.getElementById('infoBoxResponden');

    function updateImportInfo() {
      let selected = 'alumni';
      importTypeRadios.forEach(radio => {
        if (radio.checked) {
          selected = radio.value;
        }
      });

      infoBoxAlumni.style.display = selected === 'alumni' ? 'block' : 'none';
      infoBoxResponden.style.display = selected === 'responden' ? 'block' : 'none';

      if (selected === 'responden') {
        btnText.textContent = 'Import ke Responden';
      } else {
        btnText.textContent = 'Import ke Alumni';
      }
    }

    if (importTypeRadios.length > 0) {
      importTypeRadios.forEach(radio => {
        radio.addEventListener('change', updateImportInfo);
      });
      updateImportInfo();
    }

    if (uploadForm) {
      uploadForm.addEventListener('submit', function(e) {
        const fileInput = document.getElementById('csvfile');
        if (!fileInput.files || fileInput.files.length === 0) {
          e.preventDefault();
          alert('Silakan pilih file CSV terlebih dahulu!');
          return;
        }

        // Show loading state
        submitBtn.disabled = true;
        btnText.style.display = 'none';
        btnLoader.style.display = 'inline';
      });
    }

    // Auto-hide alert after 5 seconds
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
      setTimeout(() => {
        alert.style.opacity = '0';
        setTimeout(() => {
          alert.style.display = 'none';
        }, 300);
      }, 5000);
    });
  </script>
</body>
</html>

