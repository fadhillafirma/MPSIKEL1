<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Upload Data CSV | CDC Universitas Andalas</title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #2F6B31;
      --primary-dark: #1F4B24;
      --secondary: #6BCF78;
      --success: #3CB371;
      --bg: linear-gradient(160deg, #f4f7f2 0%, #ecf4ea 100%);
      --card-bg: #ffffff;
      --text-dark: #1f2e24;
      --text-muted: #6d7a6f;
      --radius: 16px;
      --shadow: 0 20px 40px rgba(19, 56, 30, 0.08);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      min-height: 100vh;
      margin: 0;
      color: var(--text-dark);
    }

    /* Header */
    .header {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(8px);
      padding: 24px 60px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 12px 20px rgba(11, 46, 104, 0.05);
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .header-left img {
      width: 64px;
      height: 64px;
      object-fit: contain;
    }

    .header-center h1 {
      font-size: 26px;
      font-weight: 600;
      margin: 0 0 6px;
    }

    .header-center p {
      font-size: 14px;
      color: var(--text-muted);
    }

    .header-right a {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 12px 20px;
      border-radius: 10px;
      background: var(--primary);
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      box-shadow: 0 12px 24px rgba(47, 107, 49, 0.18);
    }

    .header-right a:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
    }

    /* Main Container */
    .container {
      max-width: 1100px;
      margin: 40px auto 80px;
      padding: 0 40px;
    }

    .upload-card {
      background: var(--card-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 36px 40px;
    }

    .upload-card h2 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 8px;
    }

    .upload-card p {
      font-size: 15px;
      color: var(--text-muted);
      margin-bottom: 28px;
    }

    .upload-layout {
      display: grid;
      grid-template-columns: minmax(0, 0.9fr) minmax(0, 1.1fr);
      gap: 30px;
    }

    .upload-column,
    .info-column {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .upload-form label {
      display: block;
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 12px;
      color: var(--text-dark);
    }

    .import-type-group {
      margin-bottom: 24px;
    }

    .import-type-options {
      display: flex;
      gap: 18px;
      flex-wrap: wrap;
    }

    .import-type-options label {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 16px;
      border-radius: 12px;
      background: rgba(47, 107, 49, 0.08);
      color: var(--text-dark);
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .import-type-options input[type="radio"] {
      accent-color: var(--primary);
      width: 18px;
      height: 18px;
    }

    .import-type-options label:hover {
      background: rgba(47, 107, 49, 0.16);
    }

    .file-input-wrapper {
      margin-bottom: 24px;
    }

    .file-input-wrapper input[type="file"] {
      width: 100%;
      padding: 16px;
      border-radius: 12px;
      border: 1px solid rgba(47, 107, 49, 0.25);
      background: #f5faf5;
      font-size: 15px;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .file-input-wrapper input[type="file"]:focus,
    .file-input-wrapper input[type="file"]:hover {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 4px rgba(47, 107, 49, 0.18);
      background: #fff;
    }

    .upload-form button {
      width: 100%;
      padding: 16px;
      border-radius: 12px;
      border: none;
      font-size: 16px;
      font-weight: 600;
      background: var(--primary);
      color: #fff;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 18px 32px rgba(47, 107, 49, 0.2);
    }

    .upload-form button:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
    }

    .upload-form button:disabled {
      background: #d7dde7;
      color: #8a94a6;
      box-shadow: none;
      cursor: not-allowed;
      transform: none;
    }

    .info-column h3 {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 18px;
    }

    .info-grid {
      display: grid;
      gap: 18px;
    }

    .info-box {
      background: #eef5ef;
      border-left: 5px solid var(--primary);
      border-radius: 14px;
      padding: 20px 22px;
      box-shadow: inset 0 0 0 1px rgba(47, 107, 49, 0.08);
    }

    .info-box h3 {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 12px;
      color: var(--text-dark);
    }

    .info-box ul {
      list-style: none;
      display: grid;
      gap: 10px;
    }

    .info-box li {
      font-size: 14px;
      color: var(--text-muted);
      padding-left: 24px;
      position: relative;
      line-height: 1.5;
    }

    .info-box li:before {
      content: "";
      position: absolute;
      left: 0;
      top: 7px;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: var(--secondary);
      box-shadow: 0 0 0 4px rgba(107, 207, 120, 0.22);
    }

    /* Alerts */
    .alert {
      padding: 16px 20px;
      border-radius: 12px;
      margin-bottom: 26px;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .alert-success { background: #edf9f1; color: #1e7a46; border: 1px solid #caefd6; }
    .alert-error { background: #fdeceb; color: #a73a32; border: 1px solid #f4c7c3; }
    .alert-info { background: #e6f4ec; color: #266a35; border: 1px solid #c1e0c8; }

    .alert-close {
      margin-left: auto;
      cursor: pointer;
      font-size: 18px;
      opacity: 0.65;
      transition: opacity 0.2s ease;
    }

    .alert-close:hover { opacity: 1; }

    /* Responsive */
    @media (max-width: 992px) {
      .container { padding: 0 24px; }
      .upload-layout { grid-template-columns: 1fr; }
      .header { padding: 20px 24px; flex-direction: column; align-items: flex-start; gap: 14px; }
      .header-right { width: 100%; }
      .header-right a { width: 100%; justify-content: center; }
    }

    @media (max-width: 600px) {
      .upload-card { padding: 28px; }
      .import-type-options { gap: 12px; }
      .import-type-options label { font-size: 13px; padding: 8px 12px; }
      .info-box { padding: 18px; }
    }
  </style>
</head>

<body>
  <!-- Header -->
  <div class="header">
    <div class="header-left">
      <img src="/images/logounand.png" alt="Logo UNAND">
    </div>
    <div class="header-center">
      <h1>CDC Universitas Andalas</h1>
      <p>Career Development Center Andalas University</p>
    </div>
    <div class="header-right">
      <a href="/dashboard">‚Üê Kembali ke Dashboard</a>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container">
    <!-- Alert Message -->
    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="alert <%= msg.includes('Error') || msg.includes('Gagal') ? 'alert-error' : (msg.includes('Berhasil') || msg.includes('‚úÖ') ? 'alert-success' : 'alert-info') %>">
        <span><%= msg %></span>
        <span class="alert-close" onclick="this.parentElement.style.display='none'">√ó</span>
      </div>
    <% } %>

    <!-- Upload Card -->
    <div class="upload-card">
      <h2>üì§ Upload Data CSV</h2>
      <p>Pilih file CSV yang berisi data alumni atau responden untuk diimpor ke sistem</p>

      <div class="upload-layout">
        <div class="upload-column">
          <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data" class="upload-form">
            <div class="import-type-group">
              <label>Tujuan Import</label>
              <div class="import-type-options">
                <label>
                  <input type="radio" name="importType" value="alumni" id="importTypeAlumni" checked>
                  <span>Data Alumni (Wisuda)</span>
                </label>
                <label>
                  <input type="radio" name="importType" value="responden" id="importTypeResponden">
                  <span>Data Responden Tracer Study</span>
                </label>
                <label>
                  <input type="radio" name="importType" value="auto" id="importTypeAuto">
                  <span>Deteksi Otomatis</span>
                </label>
              </div>
            </div>

            <label for="csvfile">Pilih File CSV</label>
            <div class="file-input-wrapper">
              <input type="file" name="csvfile" id="csvfile" accept=".csv" required>
            </div>
            <button type="submit" id="submitBtn">
              <span id="btnText">Proses CSV</span>
              <span id="btnLoader" style="display: none;">‚è≥ Memproses...</span>
            </button>
          </form>
        </div>

        <div class="info-column">
          <h3>Panduan Format CSV</h3>
          <div class="info-grid">
            <div class="info-box" id="infoBoxAlumni">
              <h3>üìã Format CSV - Import Data Alumni</h3>
              <ul>
                <li>Kolom minimal: <strong>No, NIM, Nama, Program Studi, Fakultas</strong></li>
                <li>Contoh format: <code>Data Panjang Semua Fakultas Periode Wisuda...</code></li>
                <li>Data digunakan untuk menambah/memutakhirkan tabel `alumni`.</li>
                <li>Pastikan nama prodi & fakultas sesuai dengan data master.</li>
              </ul>
            </div>

            <div class="info-box" id="infoBoxResponden" style="display: none;">
              <h3>üìã Format CSV - Import Data Responden</h3>
              <ul>
                <li>Kolom minimal: <strong>Nama/Nama Lengkap</strong>, <strong>NIM</strong>, <strong>Program Studi</strong>, <strong>Fakultas</strong> (bisa format tracer maupun format wisuda).</li>
                <li>Contoh: <code>Data Bersih Sistem Informasi...</code>, <code>databersihkeperawatan.csv</code>, dan file tracer sejenis.</li>
                <li>Data akan disimpan ke tabel <code>responden</code> dan otomatis memperbarui kartu Total Responden di dashboard.</li>
                <li>Pastikan nama prodi & fakultas sesuai dengan master data agar baris tidak dilewati.</li>
              </ul>
            </div>

            <div class="info-box" id="infoBoxAuto" style="display: none;">
              <h3>üìã Mode Deteksi Otomatis</h3>
              <ul>
                <li>Sistem akan mencoba mengenali tipe CSV secara otomatis.</li>
                <li>Pilih mode ini bila format file beragam dan ingin sistem menentukan tujuan import.</li>
                <li>Jika deteksi gagal, silakan pilih tujuan secara manual.</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Handle CSV Upload Form
    const uploadForm = document.getElementById('uploadForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = document.getElementById('btnText');
    const btnLoader = document.getElementById('btnLoader');
    const importTypeRadios = document.querySelectorAll('input[name="importType"]');
    const infoBoxAlumni = document.getElementById('infoBoxAlumni');
    const infoBoxResponden = document.getElementById('infoBoxResponden');
    const infoBoxAuto = document.getElementById('infoBoxAuto');

    function updateImportInfo() {
      let selected = 'alumni';
      importTypeRadios.forEach(radio => {
        if (radio.checked) {
          selected = radio.value;
        }
      });

      infoBoxAlumni.style.display = selected === 'alumni' ? 'block' : 'none';
      infoBoxResponden.style.display = selected === 'responden' ? 'block' : 'none';
      infoBoxAuto.style.display = selected === 'auto' ? 'block' : 'none';

      if (selected === 'responden') {
        btnText.textContent = 'Import ke Responden';
      } else if (selected === 'alumni') {
        btnText.textContent = 'Import ke Alumni';
      } else {
        btnText.textContent = 'Proses Otomatis';
      }
    }

    if (importTypeRadios.length > 0) {
      importTypeRadios.forEach(radio => {
        radio.addEventListener('change', updateImportInfo);
      });
      updateImportInfo();
    }

    if (uploadForm) {
      uploadForm.addEventListener('submit', function(e) {
        const fileInput = document.getElementById('csvfile');
        if (!fileInput.files || fileInput.files.length === 0) {
          e.preventDefault();
          alert('Silakan pilih file CSV terlebih dahulu!');
          return;
        }

        // Show loading state
        submitBtn.disabled = true;
        btnText.style.display = 'none';
        btnLoader.style.display = 'inline';
      });
    }

    // Auto-hide alert after 5 seconds
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
      setTimeout(() => {
        alert.style.opacity = '0';
        setTimeout(() => {
          alert.style.display = 'none';
        }, 300);
      }, 5000);
    });
  </script>
</body>
</html>

